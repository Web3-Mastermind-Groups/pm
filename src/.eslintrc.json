{
    "root": true,
    "globals": {
        "ethereum": true,
        "process": true
    },
    "env": {
        "browser": true,
        "commonjs": false,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": ["react"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "react/prop-types": 0
    }
}
